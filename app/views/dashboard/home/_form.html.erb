<div class = "text-center">
  <% if current_user.cards.need_check.any? %>
    <h1><%= card.original_text %></h1>
    <%= image_tag(card.picture_url) if card.picture?%><br />
    <%= simple_form_for :card, html: {id: :card_answer}, :url => {:action => "check", :controller => "home"}, remote: true do |f| %>
      <%= f.hidden_field :id, :value => card.id %>
      <%= text_field_tag :answer, 
                         nil , 
                         placeholder: 'Введите перевод...',
                         autocomplete: "off",
                         class:  "form-control",
                         autofocus: true  %></br>
      <%= f.submit t('cards.check'), class: "btn btn-primary" %>
    <% end %>
  <p id = "cc">h</p>
  <p id = "cc2">h</p>  
  <p class = "text-center"> <%= t('cards.stuck')%> <%= link_to t('cards.next_card'), root_path %></p>
  <% else %>
    <div class = "alert alert-info text-center" id="click">
      <%= t('know_all_cards.text')%> <%= link_to t('know_all_cards.link'), new_card_path %>
    </div>
  <% end %>
</div>

