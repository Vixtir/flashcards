<div class="check_page">
<p class = "text-center main"  style="font-size: 22px;">
  <%= t('home.text')%> 
</p>

<% if current_user.cards.need_check.any? %>
	<div class="alert alert-info text-center" style="display: none;">
      <%= t('know_all_cards.text')%> <%= link_to t('know_all_cards.link'), new_card_path %>
	</div>
	<button class="start_exam btn btn-primary btn-lg btn-block" id="start_button"><%= t('home.button') %></button>
	<div class="question_form text-center" style="display: none;">
		<p id="timer" style="display: none;"></p>
		<p class="card_id" style="display: none"></p>
		<h1 class="question"></h1>
		<input class="answer form-control" id='answer' placeholder="Your answer..."></input><br/>
		<button class="check_button btn btn-success"><%= t('cards.check')%></button>
	</div>
<% else %>
	<div class = "alert alert-info text-center" id="click">
      <%= t('know_all_cards.text')%> <%= link_to t('know_all_cards.link'), new_card_path %>
    </div>
<%end %>
</div>
